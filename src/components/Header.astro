---
interface Props {
    title: string;
}
const { title } = Astro.props;
---
<header class="bg-card border-b border-border sticky top-0 z-10 p-4">
    <div class="container mx-auto flex items-center justify-between">
        <div class="flex items-center gap-2">
            <img src="/logo.svg" alt="Boardify Logo" class="h-8 w-8" />
            <h1 class="text-xl font-bold">{title}</h1>
        </div>
        <!-- Placeholder for nav icons or actions -->
        <div></div>
    </div>
</header>