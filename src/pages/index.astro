---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ProBanner from '../components/ProBanner.astro';

// In Part 3, this data will come from Supabase.
const boards = [
    { id: '1', name: 'Project Phoenix' },
    { id: '2', name: 'Q3 Marketing Plan' },
    { id: '3', name: 'Personal Goals' },
];
const hasBoards = boards.length > 0;
---

<Layout title="Boardify Dashboard">
    <Header title="My Boards" />
    
    <main class="flex-grow container mx-auto p-4">
        {hasBoards ? (
            <>
                <ProBanner />

                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                    {boards.map(board => (
                        <a href={`/board/${board.id}`} class="aspect-video bg-card border border-border rounded-lg p-4 flex flex-col justify-between hover:border-primary transition-colors">
                            <span class="font-semibold text-lg">{board.name}</span>
                            <div class="text-sm text-muted-foreground">3 members</div>
                        </a>
                    ))}
                    <button class="aspect-video bg-transparent border-2 border-dashed border-border rounded-lg flex items-center justify-center text-muted-foreground hover:border-primary hover:text-primary transition-colors">
                        <span class="text-lg">+ Create Board</span>
                    </button>
                </div>
            </>
        ) : (
            <div class="flex flex-col items-center justify-center h-full text-center mt-20">
                <img src="/logo.svg" alt="Boardify Logo" class="h-24 w-24 mb-4" />
                <h2 class="text-2xl font-bold mb-2">Welcome to Boardify!</h2>
                <p class="text-muted-foreground mb-6 max-w-sm">Organize your projects, tasks, and ideas in one place. Let's get you started.</p>
                <button class="bg-primary text-primary-foreground font-bold py-3 px-8 rounded-lg text-lg hover:opacity-90 transition-opacity">
                    Create Your First Board
                </button>
            </div>
        )}
    </main>
</Layout>