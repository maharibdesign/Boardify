---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

// This data would be dynamic
const referralLink = "https://t.me/boardify_bot/app?startapp=ref_123xyz";
const referralsCount = 2;
const goal = 3;
---

<Layout title="Referrals">
    <Header title="Invite Friends" />

    <main class="container mx-auto p-4 md:p-8">
        <div class="bg-card border border-border rounded-lg p-8 text-center max-w-2xl mx-auto">
            <h1 class="text-3xl font-bold">Invite Friends, Get Pro Free</h1>
            <p class="mt-2 text-muted-foreground">
                Invite {goal} friends to Boardify and you'll get one month of Boardify Pro for free!
            </p>

            <div class="my-8">
                <p class="text-sm text-muted-foreground mb-2">Your unique referral link:</p>
                <div class="bg-secondary p-4 rounded-lg font-mono text-center break-all">
                    {referralLink}
                </div>
                <button class="mt-4 bg-primary text-primary-foreground w-full font-semibold py-3 rounded-lg hover:opacity-90">
                    Copy Link
                </button>
            </div>

            <div>
                <h2 class="text-xl font-semibold">Your Progress</h2>
                <div class="w-full bg-secondary rounded-full h-4 my-2 border border-border">
                    <div class="bg-primary h-4 rounded-full" style={`width: ${(referralsCount / goal) * 100}%`}></div>
                </div>
                <p class="text-muted-foreground">{referralsCount} of {goal} friends have joined.</p>
            </div>
        </div>
    </main>
</Layout>